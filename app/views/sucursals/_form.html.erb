<%= form_for @sucursal, html: {class: 'form-horizontal'} do |f| %>

  <div class="col-xs-6">

    <div class="form-group">
      <%= f.label :nombre, class:'control-label col-xs-7' %>
      <div class="col-xs-12">
        <%= f.text_field :nombre, class:'input-sm form-control', maxlength: 32 %>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :organizacion_id, 'Organización', class:'control-label col-xs-7' %>
      <div class="col-xs-12">
        <%= f.collection_select(
               :organizacion_id,
               Organizacion.all,       :id,            :nombre,
               {prompt: true, selected: Organizacion.first.id},
               {class:'input-sm form-control'} )
        %>
      </div>
    </div>

  </div>

  <div class="col-xs-12">

    <div class="form-group">
      <%= f.label :direccion, 'Dirección', class:'control-label col-xs-7' %>
      <div class="col-xs-12">
        <%= f.text_area :direccion, class:'input-sm form-control' %>
      </div>
    </div>

    <div style="text-align: right">
      <div style="margin: 0 auto">
        <%= f.submit 'Registrar', class:'btn btn-primary'   %>
      </div>
    </div>

  </div>

    <div style="clear: both;">
      <% if @sucursal.errors.any? %>
          <div id="error_explanation">
            <% if @sucursal.errors.count > 1 %>
                <h2>Ocurrieron <%= pluralize(@sucursal.errors.count, 'errores') %> mientras se guardaba la sucursal: </h2>

                <ul>
                  <% @sucursal.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
            <% else %>
                <h2>Ocurrió <%= pluralize(@sucursal.errors.count, 'error') %> mientras se guardaba la sucursal: </h2>

                <ul>
                  <% @sucursal.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
            <% end %>
          </div>
      <% end %>

<% end %>
</div>
