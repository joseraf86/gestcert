<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class="col-xs-12">
    <div class="col-xs-6">

      <div class="form-group">
          <%= f.label :name, class:'control-label col-xs-12'  %>
          <div class="col-xs-12">
            <%= f.text_field :name, class:'input-sm form-control', maxlength: 32 %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :password, class:'control-label col-xs-12'  %>
          <div class="col-xs-12">
            <%= f.password_field :password, class:'input-sm form-control', maxlength: 32 %>
          </div>
      </div>

      <div class="form-group">
          <%= f.label :password_confirmation, class:'control-label col-xs-12'  %>
          <div class="col-xs-12">
            <%= f.password_field :password_confirmation, class:'input-sm form-control', maxlength: 32 %>
          </div>
      </div>
    </div>

    <div class="col-xs-6">

        <div class="form-group">
          <%= f.label :sucursal, class:'control-label col-xs-12' %>
          <div class="col-xs-12">
          <%= f.collection_select( :sucursal_id,          Sucursal.all,
                                   :id,                   :nombre,
                                   {:prompt=>true},       {:class=>'input-sm form-control'}
              )
          %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :roles, class:'control-label col-xs-12'  %>
          <div class="col-xs-12">
          <%= f.collection_select(
                  :role_id,             Role.all,
                  :id,                  :name,
                  {:prompt=>true},      {:class=>'input-sm form-control'}   )
          %>
          </div>
        </div>
    </div>
  </div>

    <div class="col-xs-12" style="text-align: right">
      <div style="margin: 0 auto">
        <%= f.submit 'Registrar', class:'btn btn-primary' %>
      </div>
    </div>

    <div style="clear: both;">
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <% if @user.errors.count > 1 %>
                <h2>Ocurrieron <%= pluralize(@user.errors.count, 'errores') %> mientras se guardaba el usuario: </h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
            <% else %>
                <h2>OcurriÃ³ <%= pluralize(@user.errors.count, 'error') %> mientras se guardaba el usuario: </h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
            <% end %>
          </div>
      <% end %>

<% end %>
</div>