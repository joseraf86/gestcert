<%= form_for @user,
        :html => {:class => 'i_form1 navbar-form navbar-left'} do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-xs-8">

        <div class="form-group">
          <%= f.label :name, class:'control-label col-xs-12'  %><br>
          <%= f.text_field :name, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:'control-label col-xs-12'  %><br>
          <%= f.password_field :password, class:'form-control' %>
        </div><br/>

        <div class="form-group">
          <%= f.label :password_confirmation, class:'control-label col-xs-12'  %><br>
          <%= f.password_field :password_confirmation, class:'form-control' %>
        </div><br/>

        <div class="form-group">
          <%= f.label :sucursal, class:'control-label col-xs-12' %><br>
          <%= f.collection_select( :sucursal_id,          Sucursal.all,
                                   :id,                   :nombre,
                                   {:prompt=>true},       {:class=>'form-control-static'}
              ) %>
        </div>

        <div class="form-group">
          <%= f.label :roles, class:'control-label col-xs-12'  %><br>
          <%= f.collection_select(
                  :role_id,             Role.all,
                  :id,                  :name,
                  {:prompt=>true},      {:class=>'form-control-static'}   )
          %>
        </div>

      </div>
    </div>

    <div style="text-align: right">
      <div style="margin: 0 auto">
        <%= f.submit 'Actualizar', class:'btn btn-primary'   %>
      </div>
    </div>

<% end %>