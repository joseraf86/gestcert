<h1>Certificados</h1>

<%= form_tag certificados_path, :method => 'get' do %>
    <p>
      <%= label_tag :n_certificado, 'numero de certificado' %>
      <%= text_field_tag :n_certificado, params[:n_certificado] %><br/>

      <%= label_tag :n_guia_proveedor, 'numero de guia de proveedor' %>
      <%= text_field_tag :n_guia_proveedor, params[:n_guia_proveedor] %><br/>

      <%= label_tag :n_codigo_producto, 'numero de codigo de producto' %>
      <%= text_field_tag :n_codigo_producto, params[:n_codigo_producto] %><br/>

      <%= label_tag :n_colada, 'numero de colada' %>
      <%= text_field_tag :n_colada, params[:n_colada] %><br/>

      <%= label_tag :n_guia_proveedor, 'numero de orden de compra' %>
      <%= text_field_tag :n_orden_compra, params[:n_orden_compra] %><br/>
      <%= submit_tag 'Buscar', :name => nil %>
    </p>

<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Numero certificado</th>
      <th>Numero guia proveedor</th>
      <th>Numero codigo producto</th>
      <th>Numero colada</th>
      <th>Numero orden compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificados.each do |certificado| %>
      <tr>
        <td><%= certificado.numero_certificado %></td>
        <td><%= certificado.numero_guia_proveedor %></td>
        <td><%= certificado.numero_codigo_producto %></td>
        <td><%= certificado.numero_colada %></td>
        <td><%= certificado.numero_orden_compra %></td>
        <td><%= link_to 'Ver', certificado %></td>
        <td><%= link_to 'Editar', edit_certificado_path(certificado) %></td>
        <td><%= link_to 'Eliminar', certificado, method: :delete, data: { confirm: 'Esta seguro de que desea eliminar el certificado?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Certificado', new_certificado_path %>
